{
  "name": "horizonte",
  "productName": "Horizonte Roleplay Launcher",
  "version": "0.0.10",
  "description": "Horizonte Roleplay Launcher",
  "main": "src/index.obfuscated.js",
  "scripts": {
    "start": "npm run obfuscate && electron-forge start",
    "publish": "electron-builder --publish always",
    "lint": "echo \"No linting configured\"",
    "build": "npm run obfuscate && electron-builder",
    "obfuscate": "javascript-obfuscator ./src/index.js --output ./src/index.obfuscated.js --compact true --control-flow-flattening true && javascript-obfuscator ./src/js/index.js --output ./src/js/index.obfuscated.js --compact true --control-flow-flattening true && javascript-obfuscator ./src/preload.js --output ./src/preload.obfuscated.js --compact true --control-flow-flattening true"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.5.0",
    "@electron-forge/maker-deb": "^7.5.0",
    "@electron-forge/maker-rpm": "^7.5.0",
    "@electron-forge/maker-squirrel": "^7.5.0",
    "@electron-forge/maker-zip": "^7.5.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.5.0",
    "@electron-forge/plugin-fuses": "^7.5.0",
    "@electron/fuses": "^1.8.0",
    "electron": "32.1.2",
    "electron-builder": "^25.1.7",
    "javascript-obfuscator": "^4.1.1"
  },
  "keywords": [],
  "author": {
    "name": "Horizonte Roleplay",
    "email": "48470238+ThiagoMCastro@users.noreply.github.com"
  },
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "child_process": "^1.0.2",
    "discord-rpc": "^4.0.1",
    "dotenv": "^16.4.5",
    "electron-log": "^5.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "https": "^1.0.0",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "sound-play": "^1.1.0",
    "winreg": "^1.2.5"
  },
  "build": {
    "appId": "com.horizonte-rp",
    "productName": "Horizonte Roleplay",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "thiagomcastro",
        "repo": "horizontelauncher",
        "private": true,
        "token": "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",
        "releaseType": "release"
      }
    ],
    "files": [
      "src/**/*",
      "src/preload.obfuscated.js",
      "src/index.obfuscated.js",
      "src/js/index.obfuscated.js",
      "!src/js/index.js",
      "!src/index.js",
      "!src/preload.js",
      "node_modules/**/*",
      "package.json",
      "src/bin/DXSETUP.exe",
      "src/bin/VisualCppRedist_AIO_x86_x64.exe"
    ],
    "extraFiles": [
      {
        "from": "src/bin/DXSETUP.exe",
        "to": "DXSETUP.exe"
      },
      {
        "from": "src/bin/VisualCppRedist_AIO_x86_x64.exe",
        "to": "VisualCppRedist_AIO_x86_x64.exe"
      }
    ],
    "win": {
      "sign": false,
      "target": [
        "nsis"
      ],
      "icon": "src/assets/appIcon.ico"
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "installerIcon": "src/assets/appIcon.ico",
      "uninstallerIcon": "src/assets/uninstallIcon.ico",
      "uninstallDisplayName": "Desinstalar Horizonte Roleplay",
      "license": "license.txt",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "src/installer.nsh",
      "installerSidebar": "./src/assets/sidebar_banner.bmp",
      "uninstallerSidebar": "./src/assets/sidebar_banner.bmp",
      "artifactName": "Horizonte Launcher.${ext}"
    }
  }
}
